@model List<Employee>

@{
    ViewBag.Title = "Employee Index";
}

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mb-3 text-center">
    @foreach (var item in Model)
    {
        var photoPath = "~/images/" + (item.PhotoPath ?? "noimage.jpg");
        <div class="col">
            <div class="card my-3">
                <div class="card-header">
                    <h5>@item.Name</h5>
                </div>
                <img class="card-img-top img-thumbnail" src="@photoPath" asp-append-version="true">
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-id=@item.Id class="btn btn-primary">View</a>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary">Edit</a>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    }
</div>
